<div class="page-width pb-lg-5 pb-sm-4 px-sm-0" id="UpcomingEvents">
  <div class="text-center mb-4">
    <h2 class="text-uppercase section-title section-title-sm mb-0">{{section.settings.heading}}</h2>
    {%- if section.settings.heading-permission == "YES" -%}
    <div class="divider-sm-teal divider-lg-teal"></div>
    {%- endif -%}
  </div>
  <div class="threecolumn-event-ptt-carousel owl-carousel">
    {% for block in section.blocks %} 
      <div class="want-items">
        <div class="img-botom-76 border-radius-lg-3 border-radius-sm-3 position-relative" style="background:url('{{block.settings.block-image |  img_url:'large'}}') no-repeat top center; background-size: cover;">
          <div class="ppt-overlay z-index-1"> 
            <div class="events-card-sm">
              <div class="want-content-c fst-sm-block"> 
                <h3 class="section-title-lg font-sm-24 font-tungsten-medium text-uppercase mb-0 mt-0 text-white">{{block.settings.location}}</h3>
                <p class="mt-0 mb-0 font-lg-16 font-sm-12">{{block.settings.description}}</p>
               </div>  
                <div class="disc ptt-disc">
                  <a href="{{block.settings.section-button-url}}" class="btn-blue-md text-uppercase mt-1 min-w-lg-200 min-w-sm-130">{{block.settings.section-button}}</a>
                </div>   
            </div>
          </div>  
        </div>
      </div>
    {% endfor %}
  </div>
</div> 
{% schema %}
  {
    "name": "Ut Sl-3 Card Detail Event",
    "presets": [
      {
        "name": "Ut Sl-3 Card Detail Event",
        "category": "Ut Sl-3 Card Detail Event"
      }
    ],
    "settings": [
        {
			"type":"text",
			"id":"heading",
			"label": "Heading Title"
		},
        {
            "type": "radio",
            "id": "heading-permission",
            "label": "Do You Want Underline Below Heading?",
          "default": "NO",
            "options": [
        {
            "value": "NO",
            "label": "NO"
        },
        {
            "value": "YES",
            "label": "YES"
        }
            ]
        }
    ],
    "blocks":[
	  {
		"type":"home-card",
		"name":"section-column",
		"settings":[
          {
  		      "type": "image_picker",
         	  "id": "block-image",
         	  "label": "Card Image"
  		   },
           {
  			"type":"text",
  			"id":"location",
  			"label": "Location"
  		  },
  		  {
           "type": "text",
           "id": "description",
           "label": "Description"
          },
          {
   			"type": "text",
   			"id": "section-button",
   			"label": "Button Title"
   		   },
    		{
    			"type": "url",
     			"id": "section-button-url",
     			"label": "Button Link"
    		}
		]
	  }
    ]
  }
{% endschema %}

