
<div class="page-width pb-lg-5 pt-lg-5 pt-sm-4 pb-sm-4">
  <div class="grid grid--1-col product-grid grid--1-col-tablet grid--2-col-desktop">
    {% for block in section.blocks %}
      <div class="grid__item">
       <div class="card-box-d">
         <div class="position-relative img-bottom-shadow">
        	<div class="card-img-d media--square media--square-sm border-radius-lg-3 border-radius-sm-3 " style="background:url('{{block.settings.image | image_url}}') no-repeat top center; background-size: cover;"> 
    		<div class="card-overlay-hover card-overlay-hover-start z-index-1">
              <div class="want-content-b"> 
                 <div class="want-heading lh-xl-78">{{block.settings.heading}}</div>
                 <div class="want-subtitle font-best-friend lh-xl-78">{{block.settings.sub-heading}}</div>
                   <a href="{{block.settings.button-url}}" class="btn-white-outline d-inline-block min-w-lg-225 min-w-sm-130 text-uppercase mt-5 mb-1">{{block.settings.button-title}}</a>
              </div>
              <div class="card-overlay-full-visible">
                <div class="d-flex align-items-baseline pb-lg-2 pt-sm-2 flex-sm-column">
                  <h2 class="text-uppercase section-title section-title-sm mb-0 lh-xl-78 section-title-md">{{block.settings.heading}}</h2>
                  <h2 class="section-sub-title text-black mt-0 mb-0 lh-xl-78 ps-2 section-title-md"><span class="text-sm-teal">{{block.settings.sub-heading}}</span></h2>
                </div>  
                <p class="pb-lg-2 font-sm-14 font-md-14 font-lg-18 fw-lg-bold lh-sm-normal lh-md-normal">{{block.settings.description}}</p>
                <ul class="fw-lg-bold font-md-12 lh-sm-normal lh-md-normal">
                  {%- if block.settings.list != blank -%}
                  <li>{{block.settings.list}}</li>
                  {%- endif -%}
                  {%- if block.settings.list2 != blank -%}
                  <li>{{block.settings.list2}}</li>
                  {%- endif -%}
                  {%- if block.settings.list3 != blank -%}
                  <li>{{block.settings.list3}}</li>
                  {%- endif -%}
                  {%- if block.settings.list4 != blank -%}
                  <li>{{block.settings.list4}}</li>
                  {%- endif -%}
                </ul>
               {%- if block.settings.button-permission-hover == "NO" -%} 
                 <div class="want-item-second">
                  <div class="pt-lg-3 pb-lg-2 pt-sm-1 pb-sm-2 pt-sm-1 d-flex justify-content-center align-items-center">
                    <a href="{{block.settings.button-url}}" class="btn-black btn-outline-lg-black btn-teal-sm fs-sm-12 d-flex justify-content-center align-items-center min-w-lg-225  text-uppercase text-center">{{block.settings.button-title}}</a>
                  </div>  
                 </div> 
                {%- endif -%} 
                {%- if block.settings.button-permission-hover == "YES" -%} 
                 <div class="want-item-second">
                  <div class="pt-lg-3 pb-lg-2 pt-sm-1 pb-sm-2 pt-sm-1 d-flex justify-content-center align-items-center">
                    <a href="{{block.settings.button-more-url}}" class="btn-black btn-outline-lg-black btn-teal-sm fs-sm-12 d-flex justify-content-center align-items-center min-w-lg-225  text-uppercase text-center">{{block.settings.button-more-title}}</a>
                  </div>  
                 </div> 
                {%- endif -%} 
              </div>  
            </div>
          </div> 
         </div>  
        </div>
     </div>
  {% endfor %}
  </div> 
</div>  
  
{% schema %}
  {
    "name": "Standard Power Full Hover",
    "presets": [
      {
        "name": "Standard Power Full Hover",
        "category": "Standard Power Full Hover"
      }
    ],
    "blocks":[
	  {
		"type":"home-card",
		"name":"Standrd Power block",
		"settings":[
        {
  		      "type": "image_picker",
         	  "id": "image",
         	  "label": "Image"
  		},
        {
			"type":"text",
			"id":"heading",
			"label": "Title"
		},
        {
			"type":"text",
			"id":"sub-heading",
			"label": "Subtitle"
		},
        {
			"type":"text",
			"id":"description",
			"label": "description"
		},
          
        {
 			"type": "text",
 			"id": "button-title",
 			"label": "Button Title"
 		},
		{
			"type": "url",
 			"id": "button-url",
 			"label": "Button Link"
		},
        {
			"type":"text",
			"id":"list",
			"label": "List"
		},
        {
			"type":"text",
			"id":"list2",
			"label": "List"
		},
        {
			"type":"text",
			"id":"list3",
			"label": "List"
		},
        {
			"type":"text",
			"id":"list4",
			"label": "List"
		},
          {
            "type": "radio",
            "id": "button-permission-hover",
            "label": "Show cta button on hover?",
            "default": "NO",
            "options": [
          {
            "value": "NO",
            "label": "NO"
        },    
        {
