<div class="page-width pb-lg-1 pt-lg-5 pt-sm-5 pb-sm-0">
  <div class="text-center mb-lg-5 mb-sm-3">
    <h2 class="text-uppercase section-title section-title-sm mb-2 mt-0 text-black lh-xl-78">{{section.settings.heading}}</h2>
    {%- if section.settings.heading-permission == "YES" -%}
    <div class="divider-sm-teal divider-lg-teal"></div>
    {%- endif -%}
  </div>
</div>
<div class="page-width pb-lg-5 pt-sm-0 pb-sm-4">
  <div class="grid grid--1-col product-grid grid--1-col-tablet grid--2-col-desktop">
    {% for block in section.blocks %}
      <div class="grid__item">
       <div class="card-box-d">
         <div class="position-relative img-bottom-shadow">
        	<div class="card-img-d media--square media--square-sm media--square-xs border-radius-lg-3 border-radius-sm-3 " style="background:url('{{block.settings.image | image_url}}') no-repeat top center; background-size: cover;"> 
    		<div class="card-overlay-hover z-index-1 card-overlay-hover-sm-center">
              <div class="want-content-c fst-sm-block want-small-sm-img"> 
                <div class="text-sm-center pb-sm-2">
                <img src="{{block.settings.icon-image | image_url}}" >
                 <div class="want-heading lh-xl-78 text-sm-white font-lg-65 fst-sm-44">{{block.settings.heading}}</div>
                 <div class="section-sub-title fst-sm-55 text-teal font-best-friend lh-xl-78 mt-sm-n1-0-5">{{block.settings.sub-heading}}</div>
                  <a href="{{block.settings.button-url}}" class="btn-white-outline d-sm-none d-md-none btn-black d-inline-block min-w-lg-225 min-w-sm-130 text-uppercase mt-5 mb-1">{{block.settings.button-title}}</a>
                </div>
              </div>
              <div class="card-overlay-full-visible">
                <div class="d-flex pb-lg-2 pt-sm-2 d-sm-none">
                  <h2 class="text-uppercase font-lg-65 font-sm-44 font-md-44 font-tungsten mb-0 mt-0 lh-xl-78 text-sm-center">{{block.settings.heading}}</h2>
                  <h2 class="section-sub-title text-black mt-0 mb-0 lh-xl-78 ps-lg-2">{{block.settings.sub-heading}}</h2>
                </div>  
                <p class="mt-0 mb-0 font-sm-12 font-md-14 fw-lg-bold lh-sm-normal">{{block.settings.description}}</p>
                <ul class="fw-lg-bold font-sm-12 font-md-14 lh-sm-normal">
                  {%- if block.settings.list != blank -%}
                  <li>{{block.settings.list}}</li>
                  {%- endif -%}
                  {%- if block.settings.list2 != blank -%}
                  <li>{{block.settings.list2}}</li>
                  {%- endif -%}
                  {%- if block.settings.list3 != blank -%}
                  <li>{{block.settings.list3}}</li>
                  {%- endif -%}
                  {%- if block.settings.list4 != blank -%}
                  <li>{{block.settings.list4}}</li>
                  {%- endif -%}
                </ul>
              {%- if block.settings.button-permission-hover == "NO" -%}     
                <div class="want-item-second">  
                  <div class="pt-lg-3 pb-lg-2 pt-sm-1 pb-sm-2 pt-sm-1 d-flex justify-content-center align-items-center">
                    <a href="{{block.settings.button-url}}" class="btn-black btn-outline-lg-black btn-teal-sm d-flex justify-content-center align-items-center min-w-lg-225  text-uppercase text-center">{{block.settings.button-title}}</a>
                  </div>
                </div>
                {%- endif -%} 
                 {%- if block.settings.button-permission-hover == "YES" -%}     
                <div class="want-item-second">  
                  <div class="pt-lg-3 pb-lg-2 pt-sm-1 pb-sm-2 pt-sm-1 d-flex justify-content-center align-items-center">
                    <a href="{{block.settings.button-more-url}}" class="btn-black btn-outline-lg-black btn-teal-sm d-flex justify-content-center align-items-center min-w-lg-225  text-uppercase text-center">{{block.settings.button-more-title}}</a>
                  </div>
                </div>
                {%- endif -%} 
              </div>  
            </div>
          </div> 
         </div>  
        </div>
     </div>
  {% endfor %}
  </div> 
</div> 
