  $(function(){

    var blogTitle = '{{ blog.title }}';
    var articleExternalURL = "{{ article.metafields.custom.url }}";
    if (blogTitle == 'Press' && articleExternalURL) {
      window.location = articleExternalURL;
    }
    
  });
  

</script>