<div class="page-width pb-lg-5 pb-sm-5 text-sm-center">
  <div class="grid grid--1-col grid--1-col-tablet grid--2-col-desktop justify-content-center align-items-center text-sm-center">
    <div class="grid__item">
      <div>
        <img class="img-fluid border-radius-lg-3 border-radius-sm-3" src="{{section.settings.section-image | image_url}}" />
      </div>
    </div>
    <div class="grid__item">
      <div class="w-lg-92">
         <p class="text-uppercase mb-lg-1 mb-sm-1 mt-0 gotham-medium font-sm-12 text-black font-lg-16 font-sm-12 lh-normal">
           {{section.settings.description}}
          </p>
          <h2 class="section-medium-title font-tungsten-medium section-title-sm mb-0 lh-xl-78 text-center d-inline-lg-block mt-0"><span class="text-uppercase">{{section.settings.heading}}</span><br />
         <span class="lh-xl-78 lh-sm-normal font-best-friend section-sub-title text-teal d-block mt-nt-lg-1 mt-sm-n1">{{section.settings.subheading}}</span></h2>
         <ul class="fw-bold ullist dotnull font-sm-15">
            {% for block in section.blocks %}
              <li>{{block.settings.block-list-items}}</li>
            {% endfor %}
          </ul>
         <a href="{{section.settings.section-button-url}}" class="btn-black min-w-lg-290 min-w-sm-160 font-sm-12 font-md-14 text-uppercase mt-3">{{section.settings.section-button}}</a>
      </div>  
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Ut Two Col Img Bullet",
    "presets": [
      {
        "name": "Ut Two Col Img Bullet",
        "category": "Ut Two Col Img Bullet"
      }
    ],
     "settings": [
        {
 			"type": "image_picker",
 			"id": "section-image",
 			"label": "Section Image"
 	   },
        {
			"type":"text",
			"id":"description",
			"label": "Description Title"
		},
       {
			"type":"text",
			"id":"heading",
			"label": "Heading Title"
		},
       {
			"type":"text",
			"id":"subheading",
			"label": "Sub Title"
		},
      
      {
 			"type": "text",
 			"id": "section-button",
 			"label": "Button Title"
 		},
		{
			"type": "url",
 			"id": "section-button-url",
 			"label": "Button Link"
		}
    ],
     "blocks":[ 
	  {
		"type":"text", 
		"name":"list-items", 
		"settings":[
		{
         	 "type": "richtext",
         	 "id": "block-list-items",
         	 "label": "Bulet Points" 
		}
	    ] 
	  }
    ]
  }
{% endschema %}

