			"id":"smalltitle",
			"label": "Small Title"
		},
        {
    "type": "select",
    "id": "small-title-size",
    "label": "Small Title Size",
    "options": [
      {
        "value": "h1",
        "label": "Large"
      },
      {
        "value": "h2",
        "label": "Medium"
      },
      {
        "value": "h3",
        "label": "Small"
      },
      {
        "value": "p",
        "label": "Normal"
      }
    ],
    "default": "p"
  },
       {
			"type":"text",
			"id":"heading",
			"label": "Heading Title"
		},
        {
    "type": "select",
    "id": "heading-size",
    "label": "Heading Size",
    "options": [
      {
        "value": "h1",
        "label": "Large"
      },
      {
        "value": "h2",
        "label": "Medium"
      },
      {
        "value": "h3",
        "label": "Small"
      }
    ],
    "default": "h2"
  },
      {
			"type":"text",
			"id":"subheading",
			"label": "SubTitle"
		},
         {
          "type": "select",
          "id": "sub-heading-size",
          "label": "Sub Header Size",
          "options": [

              { "value": "h2", "label": "Medium" },
              { "value": "h3", "label": "Small" }
          ],
               "default": "h2"
      },
      {
			"type":"text",
			"id":"description",
			"label": "Description Title"
		},
      {
 			"type": "text",
 			"id": "section-button",
 			"label": "Button Title"
 		},
		{
			"type": "url",
 			"id": "section-button-url",
 			"label": "Button Link"
		}
    ]
  }
{% endschema %}

