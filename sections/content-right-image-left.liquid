<div class="page-width pb-lg-5 pb-sm-5 text-sm-center">
    <div class="grid grid--1-col grid--1-col-tablet grid--2-col-desktop justify-content-center align-items-center text-sm-center">
      <div class="grid__item">
        <div>
          <img class="img-fluid border-radius-lg-3 border-radius-sm-3" src="{{section.settings.section-image | image_url}}" />
        </div>
      </div>
      <div class="grid__item">
        <div class="ps-lg-2">
        {% case section.settings['small-title-size'] %}
          {% when 'p' %}
         <p class="text-uppercase mb-lg-1 mb-sm-0 mt-0 gotham-medium font-sm-12 text-black font-lg-16 font-sm-12 lh-normal">{{section.settings.smalltitle}}</p>
          {% when 'h1' %}
         <h1 class="text-uppercase mb-lg-1 mb-sm-0 mt-0 gotham-medium font-sm-12 text-black small-title-font-large lh-normal">{{section.settings.smalltitle}}</h1>
          {% when 'h2' %}
         <h2 class="text-uppercase mb-lg-1 mb-sm-0 mt-0 gotham-medium font-sm-12 text-black small-title-font-medium lh-normal">{{section.settings.smalltitle}}</h2>
          {% when 'h3' %}
         <h3 class="text-uppercase mb-lg-1 mb-sm-0 mt-0 gotham-medium font-sm-12 text-black small-title-font-small lh-normal">{{section.settings.smalltitle}}</h3>
          {% endcase %}
         
                    {% case section.settings['heading-size'] %}
      {% when 'h1' %}
        <h1 class="text-uppercase section-medium-title mt-0 mb-0 mt-sm-1 lh-xl-90 section-title-large ">
          {{ section.settings.heading }}
        </h1>
      {% when 'h2' %}
        <h2 class="text-uppercase section-medium-title mt-0 mb-0 mt-sm-1 lh-xl-90 section-title-medium">
          {{ section.settings.heading }}
        </h2>
      {% when 'h3' %}
        <h3 class="text-uppercase section-medium-title mt-0 mb-0 mt-sm-1 lh-xl-90 section-title-small">
          {{ section.settings.heading }}
        </h3>
    {% endcase %}
     {% case section.settings['sub-heading-size'] %}
     {% when 'h2' %}
        <h2 class="section-sub-title text-teal mt-0 mb-0 lh-xl-90 ps-lg-2 text-sm-center section-sub-title-medium">
          {{ section.settings.subheading }}
        </h2>
        {% when 'h3' %}
        <h3 class="section-sub-title text-teal mt-0 mb-0 lh-xl-90 ps-lg-2 text-sm-center section-sub-title-small">
          {{ section.settings.subheading }}
        </h3>
  {% endcase %}
         <p class="fw-bold font-sm-14">{{section.settings.description}}</p>
         <a href="{{section.settings.section-button-url}}" class="btn-black btn-sm text-uppercase mt-1">{{section.settings.section-button}}</a>
        </div>
      </div>
    </div>
</div> 
<style>
    .section-medium-title.section-title-large {
    font-size: 120px;
    color: var(--color-black);
    font-family: var(--font-Tungsten);
}

.section-medium-title.section-title-small {
    font-size: 50px;
    color: var(--color-black);
    font-family: var(--font-Tungsten);
}
  
.section-sub-title.section-sub-title-small {
    font-size: 55px;
}
  .small-title-font-large {
    font-size: 24px;
  }
  .small-title-font-medium {
    font-size: 18px;
  }
  small-title-font-small {
    font-size: 13px;
  }
  
  @media screen and (max-width: 749px){
    .section-medium-title.section-title-large {
    font-size: 60px;
    color: var(--color-black);
    font-family: var(--font-Tungsten);
}

.section-medium-title.section-title-small {
    font-size: 26px;
    color: var(--color-black);
    font-family: var(--font-Tungsten);
}

.section-medium-title.section-title-medium {
    font-size: 40px;
}
    
    .section-sub-title.section-sub-title-small {
    font-size: 35px;
}
  }
</style>
{% schema %}
  {
    "name": "Content right image left",
    "presets": [
      {
        "name": "Content right image left",
        "category": "Content right image left"
      }
    ],
    "settings": [
        {
 			"type": "image_picker",
 			"id": "section-image",
 			"label": "Section Image"
 	   },
       {
