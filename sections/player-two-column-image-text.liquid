			"type":"text",
			"id":"heading",
			"label": "Heading Title"
		  },
           {
			"type":"text",
			"id":"subheading",
			"label": "Sub Title"
		  },
  		  {
           "type": "text",
           "id": "description",
           "label": "Description Title"
          },
          {
   			"type": "text",
   			"id": "section-button",
   			"label": "Button Title"
   		   },
    		{
    			"type": "url",
     			"id": "section-button-url",
     			"label": "Button Link"
    		},
           {
   			"type": "text",
   			"id": "section-get-stated-button",
   			"label": "Get Started Button Title"
   		   },
    		{
    			"type": "url",
     			"id": "section-get-stared-button-url",
     			"label": "Get Started Button Link"
    		},
          {
   			"type": "text",
   			"id": "section-contact-button",
   			"label": "Contact Button Title"
   		   },
    		{
    			"type": "url",
     			"id": "section-contact-button-url",
