{%- style -%}
  #Banner2-{{ section.id }}::after {
    opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
  }
  .banner2{display:block;}
  .banner2:after{
    left: 0;
    background: linear-gradient(270deg, rgba(0, 0, 0, 0.511) 4.65%, rgba(0, 0, 0, 0.7) 98.26%) !important;
  }
  .z-index-2{z-index:2}
{%- endstyle -%}

 <div class="text-sm-center">
    <div id="Banner2-{{ section.id }}" class="banner banner2" style="background:url('{{section.settings.section-image | image_url}}') no-repeat top center; min-height: 140px;width: 100%; background-size: cover;">
       <div class="z-index-2 position-relative">  
         <div class="page-width position-relative z-index-1 pb-lg-5 pt-lg-5 pt-sm-5 pb-sm-5">
            <div class="grid grid--1-col grid--1-col-tablet grid--2-col-desktop justify-content-center align-items-center">
              <div class="grid__item text-white col-lg-9 col-md-100 text-md-center">
                <h2 class="text-uppercase font-tungsten font-lg-54 font-sm-44 text-main-teal mt-0 mb-0 lh-xl-78 lh-sm-40">{{section.settings.heading}}</h2>
                <p class="mt-lg-1 mb-lg-1 md-sm-2 mt-sm-2 font-sm-14 font-lg-16 lh-sm-16 lh-lg-18 gotham-medium">{{ section.settings.paragrap-title }}</p>
              </div>
              <div class="grid__item col-lg-20 col-md-100">
                <div class="d-flex justify-content-lg-end justify-content-sm-center justify-content-md-center text-center">
                  <a href="{{section.settings.section-button-url}}" class="btn-white min-w-lg-225 min-w-md-180 min-w-sm-160 font-sm-12 font-md-14 text-uppercase" target="_blank">{{section.settings.section-button}}</a>
                </div>  
              </div>
            </div>
         </div> 
       </div>  
    </div>
</div> 
{% schema %}
  {
    "name": "Bg Image Text Button",
    "presets": [
      {
        "name": "Bg Image Text Button",
        "category": "Bg Image Text Button"
      }
    ],
    "settings": [
        {
			"type":"text",
			"id":"heading",
			"label": "Heading Title"
	   },
       {
 			"type": "image_picker",
 			"id": "section-image",
 			"label": "Section Image"
 		},
      {
          "type": "range",
          "id": "image_overlay_opacity",
          "min": 0,
          "max": 100,
          "step": 10,
          "unit": "%",
          "label": "t:sections.image-banner.settings.image_overlay_opacity.label",
          "default": 0
        },
       {
         "type": "text",
         "id": "paragrap-title",
         "label": "Paragrap Title"
      },
       {
 			"type": "text",
 			"id": "section-button",
 			"label": "Section Button Title"
 		},
		{
			"type": "url",
 			"id": "section-button-url",
 			"label": "Button Link"
	  }
    ]
  }
{% endschema %}

