<div id="News">
    <div class="page-width pb-lg-5 pb-sm-4">
      <div class="text-center mb-4 mb-sm-0">
        <h2 class="text-uppercase section-title section-title-sm mb-0">{{section.settings.heading}}</h2>
        {%- if section.settings.heading-permission == "YES" -%}
        <div class="divider-sm-teal divider-lg-teal"></div>
        {%- endif -%}
      </div>
      <div class="three-cols-carousel owl-carousel">
        {% for block in section.blocks %} 
          <div class="mb-sm-2">
              <div class='figure figure--square'>
                <div class='picture'>
                  <img
                    class='image image--fitWidth border-radius-lg-3 border-radius-sm-3'
                    alt=''
                    src='{{block.settings.block-image |  img_url:'large'}}' />
                </div>
              </div>
              <h3 class="section-title-lg font-sm-24 font-tungsten text-uppercase mb-2 mt-0">{{block.settings.heading}}</h3>
              <div class="d-flex align-items-center justify-content-between">
                  <p class="mt-0 mb-0 font-lg-16 font-sm-14 md-font-14">{{block.settings.monthdate}}, {{block.settings.year}}</p>
                  <a href="{{block.settings.section-button-url}}" class="btn-black-sm-2 text-uppercase min-w-160 min-w1-140 min-w-sm-145 font-lg-16 font-sm-12 md-font-14 btn-small-sm">{{block.settings.section-button}}</a>
              </div>
          </div> 
        {% endfor %}
      </div>  
    </div>
</div> 
{% schema %}
  {
    "name": "Pro Tennis Tour News",
     "presets": [
      {
        "name": "Pro Tennis Tour News Slide",
        "category": "Pro Tennis Tour News Slide"
      }
    ],
    "settings": [
       {
			"type":"text",
			"id":"heading",
			"label": "Heading Title"
		},
         {
            "type": "radio",
            "id": "heading-permission",
            "label": "Do You Want Underline Below Heading?",
          "default": "NO",
            "options": [
        {
            "value": "NO",
            "label": "NO"
        },
        {
            "value": "YES",
            "label": "YES"
        }
            ]
        }
    ],
     "blocks":[
	  {
		"type":"home-card",
		"name":"section-column",
		"settings":[
           {
  		      "type": "image_picker",
         	  "id": "block-image",
         	  "label": "Card Image"
  		   },
           {
  			"type":"text",
  			"id":"heading",
  			"label": "Heading Title"
  		  },
  		  {
           "type": "text",
           "id": "monthdate",
           "label": "Month And Date"
          },
           {
           "type": "text",
           "id": "year",
           "label": "Year"
          },
          {
   			"type": "text",
   			"id": "section-button",
   			"label": "Button Title"
   		   },
    		{
    			"type": "url",
     			"id": "section-button-url",
     			"label": "Button Link"
    		}
		]
	  }
    ]
  }
{% endschema %}

