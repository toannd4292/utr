<div class="page-width text-center pb-lg-5 pt-lg-5 pt-sm-2 pb-sm-2">
    <h2 class="text-uppercase section-title section-title-sm  mb-0 lh-xl-90">{{section.settings.heading}}</h2>
    <h2 class="section-sub-title text-teal mt-0 mb-0 lh-xl-78">{{section.settings.sub-heading}}</h2>
</div>
<div class="position-relative text-center page-width">
  <div class="customers-testimonials owl-carousel">
      {% for block in section.blocks %}
      {%- if block.settings.image == blank -%}
      <div class="testimonial_bg text-center">
        <div class="blue-teal-gradient-bg border-radius-lg-3 border-radius-sm-3 testimonial-content">
            <div class="testmonial-wrapper">
                <div class="comma">
                  <img src="https://cdn.shopify.com/s/files/1/0690/8071/1488/files/comma.svg?v=1670574287" />
                </div>
                <p class="testmonial-para">{{block.settings.description}}</p>
            </div> 
         </div> 
        <div class="author mt-3 lh-xl-78">{{block.settings.author}}</div>
        <div class="author-loaction">{{block.settings.author-designation}}</div>
      </div> 
      {%- elsif block.settings.image != blank -%} 
      <div class="testimonial_bg text-center">
        <div class="blue-teal-gradient-bg border-radius-lg-3 border-radius-sm-3 testimonial-content">
            <div class="testmonial-wrapper">
                <div class="testimonial-pick"><img src="{{block.settings.image | image_url}}" width="100" height="100" alt="Testimonial-image"/></div>
                 <p class="testmonial-para">{{block.settings.description}}</p>
            </div> 
         </div> 
        <div class="author mt-3 lh-xl-78">{{block.settings.author}}</div>
        <div class="author-loaction">{{block.settings.author-designation}}</div>
      </div> 
      {%- endif -%}
      {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "Testimonial Section",
    "presets": [
      {
        "name": "Testimonials Section",
        "category": "Testimonials"
      }
    ],
    "settings": [
        {
			"type":"text",
			"id":"heading",
			"label": "Heading Title"
		},
        {
			"type":"text",
			"id":"sub-heading",
			"label": "Sub Title"
		}
    ],
     "blocks":[
	  {
		"type":"home-card",
		"name":"Testimonial block",
		"settings":[
        {
			"type":"text",
			"id":"description",
			"label": "Description"
		},
        {
  		      "type": "image_picker",
         	  "id": "image",
         	  "label": "Image"
  		},
        {
			"type":"text",
			"id":"author",
			"label": "Author"
		},
        {
			"type":"text",
			"id":"author-designation",
			"label": "Author Designation"
		}
		]
	  }
    ]
  }
{% endschema %}

