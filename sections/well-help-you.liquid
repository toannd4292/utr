	},
    {
	"type": "url",
	"id": "section-button-url",
	"label": "Button Link"
    }
  ],

  "blocks":[
      {
          "type":"home-card",
          "name":"Well Help You Block",
          "settings":[

      {
		  "type": "image_picker",
       	  "id": "image",
       	  "label": "Image"
	  },
      {
          "type": "select",
          "id": "layout",
          "label": "Image alignment",
          "default": "left",
          "options": [
      {
          "value": "left",
          "label": "Left"
      },
      {
          "value": "right",
          "label": "Right"
      }
          ]
      },

      {
      	"type":"text",
      	"id":"name",
      	"label": "Name"
      },
            {
