<div class="page-width pb-lg-5 pt-lg-5 pt-sm-4 pb-sm-4 px-sm-0">
  <div class="threecolumn-carousel owl-carousel">
    {% for block in section.blocks %} 
    <div class="text-center mb-3 position-relative">
      <div class="media--16-6 border-radius-lg-3 border-radius-sm-3 position-relative" style="background:url('{{block.settings.block-image |  img_url:'large'}}') no-repeat top center; background-size: cover;"> 
         <div class="img-overlay-light border-radius-lg-3 border-radius-sm-3"></div>
       </div> 
      <div class="p-lg-1 p-sm-2 content-sm-hide ">
        <div class="vmin-lg-65">
           <h2 class="heading-md text-uppercase font-tungsten lh-xl-78 mb-2">{{block.settings.heading}}</h2>
           <p class="font-sm-14 font-lg-16 fw-bold lh-sm-20 line-limit-5">{{block.settings.description}}</p>
        </div>  
       <div class="btnbottom-fixs"> 
         <a href="{{block.settings.section-button-url}}" class="btn-black position-relative btn-sm justify-content-center text-uppercase mt-3">{{block.settings.section-button}}</a>
      </div>  
      </div>  
    </div>  
   {% endfor %}
  </div>
</div>  
{% schema %}
  {
    "name": "Three Column Slider",
    "presets": [
      {
        "name": "Three Column Slider",
        "category": "Three Column Slider"
      }
    ],
    "settings": [],
    "blocks":[
	  {
		"type":"home-card",
		"name":"section-column",
		"settings":[
           {
  		      "type": "image_picker",
         	  "id": "block-image",
         	  "label": "Card Image"
  		   },
           {
  			"type":"text",
  			"id":"heading",
  			"label": "Heading Title"
  		  },
  		  {
           "type": "text",
           "id": "description",
           "label": "Description"
          },
          {
   			"type": "text",
   			"id": "section-button",
   			"label": "Button Title"
   		   },
    		{
    			"type": "url",
     			"id": "section-button-url",
     			"label": "Button Link"
    		}
		]
	  }
    ]
  }
{% endschema %}

